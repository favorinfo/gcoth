<!doctype html>
<html class="no-js">
<head>
  {{! Document Settings }}
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="handheldfriendly" content="true"/>
  {{! Page Meta }}
    {{#if post}}
  <title>{{meta_title}} - {{@blog.title}}</title>
  {{else}}
  <title>{{meta_title}} - 运维私房菜</title>
  {{/if}}
    {{#if post}}
  <meta name="description" content="{{#post}}{{excerpt words="150"}}
        {{/post}}" />
  <meta name="keywords" content="{{meta_description}}"/>
  {{else}}
  <meta name="description" content="{{meta_description}}" />
  <meta name="keywords" content="{{meta_title}} - 运维私房菜, {{@blog.title}}, Jam, ops" />
  {{/if}}
