{{!< default}}
        <div class="container clearfix">
  <main role="main" id="content" class="content">
    {{#foreach posts}}
    <article class="{{post_class}} post">

      <h2>
        <a href="{{url}}" title="{{title}}">{{title}}</a>
      </h2>
      <footer class="post-info">
        Posted on
        <span class="post-meta">
          <time datetime="{{date published_at format="YYYY-MM-DD"}}">{{date published_at format="Do MMMM YYYY"}}</time>
          {{tags separator=", " prefix="Tagged in "}}
        </span>
      </footer>
      {{#if image}}
      <div class="featured-image">
        <a href="{{url}}" title="{{title}}">
          <div class="fimg" style="background:url({{image}}) no-repeat center center;-webkit-background-size: cover; -moz-background-size: cover;-o-background-size: cover;background-size: cover;-webkit-transition:all .54s;transition:all .54s"></div>
        </a>
        <p>{{excerpt characters="300"}}&hellip;</p>
      </div>
      {{else}}
      <p>{{excerpt characters="600"}}&hellip;</p>
      {{/if}}
      <a class="read-more" href="{{url}}" title="{{title}}">Read More</a>
    </article>
    {{/foreach}}

              {{pagination}}
  </main>

</div>